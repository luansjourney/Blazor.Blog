<CascadingAuthenticationState>
<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(BlogLayout)">
            <NotAuthorized>
		    	<h3>You are not authorized to access this page.</h3>
                <p>Please proceed with the login</p>
			    <Blazor.Blog.Client.Pages.Login></Blazor.Blog.Client.Pages.Login>
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(BlogLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
</CascadingAuthenticationState>